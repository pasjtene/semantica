<table class="bordered highlight centered responsive-table">
    <thead>
    <tr>
        <th>NÂ°</th>
        <th>{% trans from 'forms' %} form.commit.code {% endtrans %}</th>
        <th>{% trans from 'forms' %} form.commit.auther {% endtrans %}</th>
