{% extends 'MainBundle::layout.html.twig' %}
{% block meta %}
    <meta name = "{% trans from 'refer' %} home.title {% endtrans %}" >
    <meta name = "keywords" content = "{% trans from 'refer' %} home.description {% endtrans %}" >
{% endblock %}
{% block title %}
    Semantica Technologies Corporation - STC
{% endblock %}


{% block mycss %}
    <link rel="stylesheet" href="{{ asset('components/cssbase/datatablehelp.css') }}">
    <link rel="stylesheet" href="{{ asset('components/cssbase/datatablehelp2.css') }}">
    <style>

        strong{
            font-weight: bold;
        }
        footer{
            bottom: 0;
            width: 100% !important;
        }
        .mega-menu{
            z-index: 9999999999999999999999999999 !important;
        }
        #zone_table{
            height: 352px;
            overflow-y: auto;
        }

    </style>
{% endblock %}

{% block main %}
    {{ parent() }}
    <div class="row" id="main_task">
        <div class="col s12">
            <div class="col s12 m4">
                <br>
                <ul class="collection with-header">
                    <li class="collection-header"><h4>{% trans from 'forms' %} form.Task.title {% endtrans %}</h4></li>
                    {% for item in items %}
                        <li class="collection-item">

                            <div>
                                <a href="{{ '#modal_task'~item.id }}" class="black-text">
                                    {{ item.libelle }}  &nbsp; &nbsp; <strong class="green-text"> {{ item.rate~'%' }}</strong>
                                </a>
                                <div id="{{ 'modal_task'~item.id }}" class="modal modal-fixed-footer">
                                    <div class="modal-content black-text">
                                        <h4>{% trans from 'forms' %} form.Task.more {% endtrans %}</h4>
                                        <p>
                                            <strong>
                                                {% trans from 'forms' %} form.Task.libelle {% endtrans %} :
                                            </strong>
                                            <br>
                                            <span>
                                                {{ item.libelle }}
                                            </span>
                                        </p>
                                        <p>
                                            <hr>
                                            <strong>
                                                {% if item.status==0 %}
                                                    {% trans from 'forms' %} form.Task.nofinish {% endtrans %} :
                                                {% else %}
                                                    {% trans from 'forms' %} form.Task.finish {% endtrans %} :
                                                {% endif %}
                                            </strong>
                                            <br>
                                            <span>
                                                {% if item.status==0 %}
                                                    <div class="progress">
                                                        <div class="determinate" style="width: 1%">1%</div>
                                                    </div>
                                                {% else %}
                                                    <div class="progress">
                                                        <div class="determinate" style="width: {{ item.rate~'%' }}"> {{ item.rate~'%' }}</div>

                                                    </div>
                                                {% endif %}
                                            </span>
                                        </p>
                                        <p>
                                            <hr>
                                            <strong>
                                                {% trans from 'forms' %} form.base.date {% endtrans %} :
                                            </strong>
                                            <br>
                                            <span>
                                                {{ item.date|date('d-m-y') }}
                                            </span>
                                        </p>
                                        <p>
                                            <hr>
                                            <strong>
                                                {% trans from 'forms' %} form.base.description {% endtrans %} :
                                            </strong>
                                            <br>
                                            <span>
                                                {{ item.description|raw }}
                                            </span>
                                        </p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
                                    </div>
                                </div>
                                <a href="{{ path('main_projet_task',{id:id, id2:item.id}) }}" class="secondary-content">
                                    <i class="material-icons">remove_red_eye</i>
                                </a>
                            </div>
                        </li>
                    {% endfor %}

                </ul>


            </div>
            <div class="col s12 m8 " id="corp_task">
                <br>
                <div class="card grey lighten-3">
                    <strong>Initialisation (10%)</strong>
                    <p>je suis le test 1
                        <br>
                        <span class="right right-align">20-05-2017</span>
                        <br>
                    </p>

                </div>
                <div class="col s12">
                    <h4>COMMIT  LIST</h4>
                </div>
                <div class="col s12 grey lighten-3">
                    {% for i in 1..10 %}
                        <div class="card">
                           <table width="100%">
                               <tr>
                                   <td colspan="4">
                                       <strong>Titre </strong>
                                        <p>Je suis une description  pour ce commit. je presente le changement  qui  c'est pass√©</p>
                                   </td>
                                   <td colspan="2">
                                       <a href="{{ '#modal_commit'~i }}" class="secondary-content tooltipped"    data-position="top" data-delay="50"  data-tooltip="Comment">  <i class="material-icons">comment</i> </a>
                                       <div id="{{ 'modal_commit'~i }}" class="modal modal-fixed-footer">
                                           <div class="modal-content">
                                               <h4>Modal Header</h4>
                                               <p>A bunch of text</p>
                                           </div>
                                           <div class="modal-footer">
                                               <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
                                           </div>
                                       </div>
                                   </td>
                               </tr>
                           </table>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block myjs %}
    <script>
        $(document).ready(function() {
            var elt ={
                modal: $('.modal')
            };
            elt.modal.modal();
        } );
    </script>
{% endblock %}
