{% extends 'MainBundle::layout.html.twig' %}
{% block meta %}
    <meta name = "{% trans from 'refer' %} home.title {% endtrans %}" >
    <meta name = "keywords" content = "{% trans from 'refer' %} home.description {% endtrans %}" >
{% endblock %}
{% block title %}
    Semantica Technologies Corporation - STC
{% endblock %}


{% block mycss %}
    <link rel="stylesheet" href="{{ asset('components/cssbase/datatablehelp.css') }}">
    <link rel="stylesheet" href="{{ asset('components/cssbase/datatablehelp2.css') }}">
    <style>

        strong{
            font-weight: bold;
        }
        footer{
            bottom: 0;
            width: 100% !important;
        }
        .mega-menu{
            z-index: 9999999999999999999999999999 !important;
        }
        #vertical_nav ul{
            position: absolute !important;
        }
    </style>
{% endblock %}
{% block header %}
    {{ parent() }}
    <div class="row" id="main_account">
        <div class="row">
           <div class="col s12">
               <div class="col s5 m3">
                   {% include 'MainBundle:Inc:vertical-nav.html.twig' %}
               </div>
               <div class="col s7 m9" style="min-height: 300px;">
                   <br><br>
                   <div class="row" id="search">
                       <form action="" method="post">
                           <div class="col s12">
                               <div class="input-field col s12 m4">
                                   <select>
                                       <option value=""  >{% trans from 'private' %} private.choose_project {% endtrans %}</option>
                                       {% for item in items %}
                                           <option value="{{ item.id }}" {% if code is defined and code==item.id %} selected {% endif %}> {{ item.title }}</option>
                                       {% endfor %}
                                   </select>
                               </div>
                           </div>

                       </form>
                   </div>
                   {% if list!=null %}
                       <div class="row">
                           <div class="col s12">
                               <div class="col s12">
                                   <ul class="collapsible" data-collapsible="accordion">
                                        {% for item in list %}
                                           <li>
                                               <div class="collapsible-header"><i class="material-icons">book</i>{{ item.project.title }}</div>
                                               {% if item.comments==null %}
                                                     <div class="collapsible-body">
                                                         <div class="col s12">
                                                             <h4>
                                                                 {% trans from 'private' %} comment.empty  {% endtrans %}
                                                             </h4>
                                                         </div>
                                                     </div>
                                               {% else %}
                                                   {% for comment in item.comments %}
                                                       {% if loop.index==1 %}
                                                           <div class="collapsible-body">
                                                               <div class="col s12">
                                                                   <div class="card-panel grey lighten-4">
                                                                       {{ comment.description }}
                                                                       <br>
                                                                       <span class="right right-align black-text">{{ comment.date|date('d-m-y h:i:s') }}</span>
                                                                   </div>
                                                               </div>
                                                       {% else %}
                                                           <div class="col s12">
                                                               <div class="card-panel">
                                                                   {{ comment.description }}
                                                                   <br>
                                                                   <span class="right right-align grey-text">{{ comment.date|date('d-m-y h:i:s') }}</span>
                                                               </div>
                                                           </div>
                                                       {% endif %}
                                                       {% if item.comments|length==loop.index %}
                                                           </div>
                                                       {% endif %}
                                                   {% endfor %}
                                               {% endif %}
                                           </li>
                                        {% endfor %}
                                   </ul>
                               </div>
                           </div>
                       </div>
                   {% else %}
                       <h4>
                           {% trans from 'private' %} comment.empty_project  {% endtrans %}
                       </h4>
                   {% endif %}
               </div>
           </div>
        </div>
    </div>

{% endblock %}
{% block  main %}

{% endblock %}

{% block myjs %}
    <script>
        $(document).ready(function() {
           //$('select').material_select();
            $('.collapsible').collapsible();
        } );
    </script>
{% endblock %}
