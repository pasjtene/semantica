                            <td>
                                <a href="#"><img width="125"  src="{{ asset('data/img/button.jpg') }}" alt=""></a>

                            </td>
                        </tr>

                    </table>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


{% block myjs %}
    <script>
        $( document ).ready(function() {
            $(".see_less_cisco").hide();
            $(".see_less_lpi").hide();
            $(".see_more_cisco").click(
                function(){
                    //$("#cisco").removeClass("hg_200");
                    $("#cisco").addClass("hg_400");
                    $(".see_less_cisco").show();
                    $(".see_more_cisco").hide();
                }
            );

            $(".see_less_cisco").click(
                function(){
                    $("#cisco").removeClass("hg_400").addClass("hg_200");;
                    //$("#cisco").addClass("hg_200");
                    $(".see_more_cisco").show();
                    $(".see_less_cisco").hide();
                }
            );

            $(".see_more_lpi").click(
                function(){
                    //$("#cisco").removeClass("hg_200");
                    $("#lpi").addClass("hg_400");
                    $(".see_less_lpi").show();
                    $(".see_more_lpi").hide();
                }
            );

            $(".see_less_lpi").click(
                function(){
                    $("#lpi").removeClass("hg_400").addClass("hg_200");
                    $(".see_more_lpi").show();
                    $(".see_less_lpi").hide();
                }
            );

        });

    </script>
{% endblock %}
