{% block myjs %}
    <script>
        $( document ).ready(function() {
            $(".see_less").hide();

            $(".see_more").click(function(){
                $(".see_more").not(this).each(function () {
                    $(this).show();
                    $(this).siblings(".new_cert").removeClass("hg_400");
                    $(this).siblings(".see_less").hide();
                });
                $(this).hide();
                $(this).siblings(".see_less").show();
                $(this).siblings(".new_cert").addClass("hg_400");
            });

            $(".see_less").click(
                    function(){
                        $(this).hide();
                        $(this).siblings(".see_more").show();
                        $(this).siblings(".new_cert").removeClass("hg_400");
                    }
            );

        });

    </script>
