{% block mycss %}
    <style>

        .certification_div {
            border: 1px solid yellowgreen;
            margin-top: 50px;
            display: flex;
            display: -webkit-flex;
            -webkit-justify-content: center;
            justify-content: center;
        }

        .new_cert_group {
            padding: 1px;
            margin: 10px;
            /*border: 1px solid lightgray;
            width: 200px;*/
        }

        /*.new_cert are the flex items*/
        .new_cert {
            padding-left: 5px;
            height: auto;
            overflow: hidden;
            margin-bottom: 0;
            max-height: 300px;
            transition: max-height 4s ease-in-out;
        }


        .img_w {
            max-width: 100%;
            max-height: 40%;
        }
        .new_cert:hover {
            background-color: lightgray;
        }

        .hg_200 {
            height: 100%;
            -webkit-transition: height 2s; /* For Safari 3.1 to 6.0*/
            transition: max-height 4s;

        }
        .hg_400 {
            /*height: 100%;
            -webkit-transition: height 4s;  For Safari 3.1 to 6.0
            transition: height 4s;*/
            border: 1px solid lightgray;
            max-height: 600px;
            transition: max-height 4s;
        }
        /*

        */
        .see_more {
            display: block;
            background-color: yellowgreen;
            color: white;
            text-align: center;
            font-size: 15px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 3px;
        }
        .see_less {
            display: block;
            background-color: yellowgreen;
            color: white;
            text-align: center;
            font-size: 15px;
            font-weight: bold;
            cursor: pointer;
        }


        /*Media query for iPhone 6 portrait*/
        @media only screen
        and (min-device-width : 375px) /* or 213.4375em or 3in or 9cm */
        and (max-device-width : 667px) /* or 41.6875em*/
        and (orientation : portrait)
        {
            .certification_div {
                flex-wrap:wrap;
            }
        }

        /*Media query for iPhone 6 landscape*/
        @media only screen
        and (min-device-width : 375px) /* or 213.4375em or 3in or 9cm */
        and (max-device-width : 667px) /* or 41.6875em*/
        and (orientation : landscape)
        {
            .certification_div {
                flex-wrap:wrap;
            }

            .new_cert_group {
                width: 45%;
            }
        }

        /*Media query for iPhone 6+ landscape*/
        @media only screen
        and (min-device-width : 414px)
        and (max-device-width : 736px)
        and (orientation : landscape)
        {
            .certification_div {
                flex-wrap:wrap;
            }

            .new_cert_group {
                width: 45%;
            }
        }

    </style>
{% endblock %}
