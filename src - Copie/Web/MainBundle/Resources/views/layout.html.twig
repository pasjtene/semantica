{% extends '::base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href='http://fonts.googleapis.com/css?family=Sintony:400,700&subset=latin-ext' rel='stylesheet' type='text/css'>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdn.materialdesignicons.com/1.9.32/css/materialdesignicons.min.css">
    <style>
        #slide{
            margin: 0% !important;
            padding: 0% !important;
            background-size: cover !important;
            max-height: 100% !important;
        }

        @media screen and (min-width: 1024px) {
            #slide{
                min-height: 420px !important;
            {% if app.request.locale=="en" %}
                background-image: url({{ asset('data/img/slide/en/slide.jpg') }} ) !important;
            {% else %}
                background-image: url({{ asset('data/img/slide/fr/slide.jpg') }} ) !important;
            {% endif %}
            }
        }
        @media screen and (max-width: 1024px) {
            #slide{
                min-height: 500px !important;
            {% if app.request.locale=="en" %}
                background-image: url({{ asset('data/img/slide/en/slide_mobile.jpg') }} ) !important;
            {% else %}
                background-image: url({{ asset('data/img/slide/fr/slide_mobile.jpg') }} ) !important;
            {% endif %}
            }
        }
        @media screen and (max-width: 736px) {
            #slide{
                min-height: 400px !important;
            }
        }
        @media screen and (max-width: 430px) {
            #slide{
                min-height: 300px !important;
            }
            #mobile_help{
                position: fixed !important;
                top: 1% !important;
                right: 1% !important;
                z-index: 99999;
            }
            .fixNavigation{

                background-color: white; !important;
                height: 41px!important;
            }
            #menu_small ul,  #menu_small nav{
                background-color: white !important;
                height: 149px !important;
            }
        }

        #navadmin {
            border: 0px !important;
        }

    </style>
{% endblock %}
