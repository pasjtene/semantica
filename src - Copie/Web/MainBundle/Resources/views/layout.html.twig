            $('.menu > ul li a, .xs-menu > ul li a').click(function(){
                if($(this).val()!="#")
                {
                    window.location.href = $(this).attr('href');
                }
            });

            $('#nav_top ul li a').click(function(){
                if($(this).val()!="#")
                {
                    window.location.href = $(this).attr('href');
                }
            });

            $('#vertical_nav ul li a').click(function(){
                if($(this).val()!="#")
                {
                    window.location.href = $(this).attr('href');
                }
            });


            $('#mobile_register').click(function(){
                $('#email').focus();
            });
            // On recupere la position du bloc par rapport au haut du site
            var position_top_raccourci = $("#menu_big").offset().top;

            //Au scroll dans la fenetre on d�clenche la fonction
            $(window).scroll(function () {

                //si on a defile de plus de 150px du haut vers le bas
                if ($(this).scrollTop() > position_top_raccourci) {

                    //on ajoute la classe "fixNavigation" a <div id="navigation">
                    $('#menu_big').addClass("fixNavigation");
                } else {

                    //sinon on retire la classe "fixNavigation" a <div id="navigation">
                    $('#menu_big').removeClass("fixNavigation");
                }
            });

            //small menu
            // On recupere la position du bloc par rapport au haut du site
            var position_top_raccourci = $("#menu_small").offset().top;

            //Au scroll dans la fenetre on déclenche la fonction
            $(window).scroll(function () {

                //si on a defile de plus de 150px du haut vers le bas
                if ($(this).scrollTop() > position_top_raccourci) {

                    //on ajoute la classe "fixNavigation" a <div id="navigation">
                    $('#menu_small').addClass("fixNavigation");
                    $('#mobile_help').fadeIn();
                } else {

                    //sinon on retire la classe "fixNavigation" a <div id="navigation">
                    $('#menu_small').removeClass("fixNavigation");
                    $('#mobile_help').fadeOut();
                }
            });

            $(".button-collapse").sideNav();
            $("#mobile_help").click(function(e){
                $('#menu_mobile').trigger('click');
                //  alert();
                e.preventDefaults();
            });


        });
    </script>
